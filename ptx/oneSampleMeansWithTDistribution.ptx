        <row>
          <cell><m>n</m></cell>
          <cell><m>\bar{x}</m></cell>
          <cell><m>s</m></cell>
          <cell>minimum</cell>
          <cell>maximum</cell>
        </row>
        <row>
          <cell>19</cell>
          <cell>4.4</cell>
          <cell>2.3</cell>
          <cell>1.7</cell>
          <cell>9.2</cell>
        </row>
        <row bottom="minor">
          <cell></cell>
          <cell></cell>
